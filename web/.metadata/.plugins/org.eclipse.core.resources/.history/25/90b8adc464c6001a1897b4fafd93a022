<script>
	
	function displayPicture(){
		
		var img = document.getElementById("img");
		img.src = "./res/img/appicon.png"
	}
	const palyMusic = () => {
		document.getElementById("audio").play();
	}
	
	const playVideo = () => {
		document.getElementById("video").play();
	}
</script>
